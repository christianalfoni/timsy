{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": ["dom", "es2018"],
    "moduleResolution": "node",
    "outDir": "dist",
    "paths": {
      "timsy": ["./src/index.ts"],
      "timsy/*": ["./src/*.ts"]
    },
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "target": "ESNext"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src", "tests"]
}
