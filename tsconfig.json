{
  "compilerOptions": {
    "target": "ES2017",
    "rootDir": "src",
    "outDir": ".code",
    "lib": ["dom", "es2018"],
    "jsx": "react",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "importHelpers": true,
    "declaration": true,
    "pretty": true,
    "sourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "exclude": ["node_modules", "cjs", "react"],
  "include": ["src"]
}
